<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.a3passos.adivinha.InputsActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quais animais você tem?"
        android:textAlignment="center"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/check_gato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:text="Gato" />

    <CheckBox
        android:id="@+id/check_cachorro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:text="Cachorro" />

    <CheckBox
        android:id="@+id/check_coala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        android:text="Coala" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="4"
        android:text="Você é?"
        android:textAlignment="center"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="5">

        <RadioButton
            android:id="@+id/radio_homem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cabra Homi" />

        <RadioButton
            android:id="@+id/radio_mulher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mulherzinha" />
    </RadioGroup>



    <TextView
        android:id="@+id/lindisse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="6"
        android:text="Nível de lindisse"
        android:textAlignment="center"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/nivel_lindisse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginTop="2sp"
        android:layout_row="7"
        android:max="10"
        android:min="1" />


    <TextView
        android:id="@+id/lindo_descricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginTop="10sp"
        android:layout_row="8"
        android:text="TextView"
        android:textAlignment="center" />



    <TextView
        android:id="@+id/resss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="9"
        android:text="Resultado"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginTop="10sp"
        android:layout_row="10"
        android:text="TextView" />

    <Button
        android:id="@+id/bt_inputs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="24"
        android:text="Button" />

</GridLayout>
